/* component/topic-item.wxss */
.container{
    padding: 20rpx 30rpx;
    height: 160rpx;
display: flex;
justify-content: space-between;
align-items: center;

}
.content_box{
display: flex;
align-items: center;
}
.content_box image{
    width: 120rpx;
    height: 120rpx;
    background: #ccc;   
    border-radius: 20rpx;
}
.title{
    font-size: 28rpx;
    line-height: 40rpx;
    font-weight: bold;        
}
.text{
    font-size: 20rpx;
    line-height: 30rpx;
    color: #C3C3C3;
}
.text_box{
    padding-left: 20rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.container button{
     height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    border: none;
    border-radius: 20rpx;
    color: #fff;
    margin: 0;
}
button::after{
    border: none;
}
button:active{
    color: #fff;
}
.off{
    width: 120rpx;
    background: #E51C23;
}
.enter{
    width: 160rpx;
    background: #FEDC00;
}
.close{
width: 160rpx;
    background: #DFDFDF;
}
.line{
    width: 100%;
    height: 2rpx;
    background: #F5F6FB;
}