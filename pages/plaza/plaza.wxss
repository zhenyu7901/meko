/* pages/plaza/plaza.wxss */
.search_box{
    width: 90%;
    margin: 0 5%;
}
.slide-image{
    width: 100%;
}
.title{
    font-size: 28rpx;
    line-height: 100rpx;
}
.line{
    width: 100%;
    height: 10rpx;
    background: #F5F6FB;
    margin: 20rpx 0;
}
.near_text{
    margin-top: 200rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    text-align: center;
    color: #999;
}
.upload_box{
    width: 110rpx;
    height: 110rpx;
    border-radius: 110rpx;
    background: rgba(86,119,252,0.5);
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    z-index: 999;
}
.upload_box .plus{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-40%);
    font-size: 30rpx;
    color: #fff;
}