/* pages/publish/publish.wxss */
.title_box {
    display: flex;
    /* align-items: center; */
     line-height: 100rpx;
}
.title_box input{
    font-size: 28rpx;
    width: 400rpx;
     line-height: 100rpx;
     height: 100rpx;
     margin-left: 40rpx;
}
.text_title{
       width: 160rpx;
           font-size: 34rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
}
.title_box text,.huati_box text{
    width: 200rpx;
    font-size: 34rpx;
    display: block;
}
.huati_box{
    display: flex;
    /* justify-content: space-between; */
    align-items: flex-start;
}
.huati{
    margin-left: 40rpx;
    font-size: 28rpx;
    width: 400rpx;
    /* padding-left: 200rpx ; */
    line-height:50rpx;
    height: 200rpx;
    box-sizing: border-box;
}
.upload{
width: 100rpx;
height: 100rpx;
border-radius: 6rpx;
border: 2rpx solid #F5F6FB;
position: relative;
margin: 10rpx;
}
.plus{
    color: #F5F6FB;
    font-size: 58rpx;
position: absolute;
left: 50%;
top: 50%;
transform: translate(-50%,-40%);
}
.image_box{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.line{
    width: 100%;
    height: 2rpx;
    background: #F5F6FB;
}

.address{
    /* line-height: 100rpx; */
    min-height: 100rpx;
    display: flex;
    align-items: center;
    font-size: 34rpx;
}
.position{
    width: 40rpx;
    height: 40rpx;
    margin-right:20rpx;
}
.fabu{
    width: 400rpx;
    height: 80rpx;
    font-size: 36rpx;
    line-height: 80rpx;
background: #FEDC00;
color: #fff;
margin-top: 30rpx;
}
.fabu::after{
    border: none;
}