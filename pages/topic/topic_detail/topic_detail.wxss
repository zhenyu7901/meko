                margin: 20rpx 0;

    font-size: 28rpx;
    font-weight: 400;
}
.record{
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
    background: #068BDF;
    position: fixed;
    bottom: 50rpx;
    left: 400rpx;
}
.record image{
    width: 52rpx;
    height: 52rpx;
    margin: 19rpx;
}
.picture{
    width: 70rpx;
    height: 70rpx;
    border-radius: 70rpx;
    background: #068BDF;
    position: fixed;
    bottom: 50rpx;
    left: 510rpx;
}
.picture image{
        width: 42rpx;
    height: 42rpx;
    margin: 14rpx;
}
.comment_box{
    display: flex;
    align-items: center;
    padding: 0 40rpx;

}
.usercomment{
        height: 140rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100rpx;
}
.usercomment image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    background: #ccc;
}
.usercomment text{
    display: block;
    width: 100rpx;
    font-size: 18rpx;
    overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
text-align: center;
}
.inside{
    width:0;
    height:0;
    border-top:20rpx solid transparent;
    border-bottom:20rpx solid transparent;
    border-right:20rpx solid #fff;
    position: absolute;
    top: 30rpx;
    left: -20rpx;
}
.comment_text{
    box-sizing: border-box;
    position: relative;
    padding: 30rpx;
    max-width: 460rpx;
    background: #fff;
    min-height: 100rpx;
    /* line-height: 60rpx; */
    font-size: 30rpx;
    border-radius: 10rpx;
    margin-left: 50rpx;
}
.comment_text text{
    line-height: 40rpx;
}
.comment_audio{
     box-sizing: border-box;
    position: relative;
    text-align: right;
    width: 300rpx;
    height: 100rpx;
    background: #fff;
        border-radius: 10rpx;
            margin-left: 50rpx;
}
.comment_audio image{
    margin: 25rpx;
    width: 50rpx;
    height: 50rpx;
    float: right;
}
.comment-img image{
    width: 460rpx;
    height: 240rpx;
    border-radius: 20rpx;
    background: #ccc;
    margin: 10rpx 0;
margin-left: 50rpx;
}
.fenxiang_box{
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.fenxiang_box button{
    background: #fff;
margin: 0;
}
.fenxiang_box button::after{
    border: none;
}
.fenxiang_content{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
    padding: 60rpx 0;
}
.fenxiang_content image{
    width: 100rpx;
    height: 100rpx;
margin-bottom: 30rpx;
}
