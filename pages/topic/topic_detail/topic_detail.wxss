/* pages/topic/topic_detail/topic_detail.wxss */
.container_box{
    padding: 40rpx;
}
.share_box{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.share{
    width: 40rpx;
    height: 40rpx;
    background: #FEDC00;
    box-shadow: 0 0 20rpx rgba(254,220,0,0.5);
    /* margin-right: 30rpx; */
}
.user_box{
    display: flex;
    align-items: center;
}
.user_box>image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
    background: #ccc;
}
.name_box{
    margin-left: 30rpx;
font-size:24rpx;
height: 90rpx;
display: flex;
flex-direction: column;
justify-content: space-between;
}
.name_box image{
    width: 20rpx;
    height: 20rpx;
     margin-right: 20rpx;
}
.name_box text{
    margin-right: 20rpx;
}
.grade{
    font-size: 20rpx;
    background: #FEDC00;
    color: #fff;
    border-radius: 4rpx;
    padding: 0 4rpx;
}
.gray{
    color: #B9B9B9;
}
.text_content{
    font-size: 26rpx;
    line-height: 40rpx;
    margin: 30rpx 0;
}
.image{
    width: 670rpx;
    height: 320rpx;
    background: #ccc;
    border-radius: 10rpx;
}
.userList_box{
    margin: 30rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.userList{
display: flex;
flex-direction: column;
align-items: center;
}
.userList image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    background: #ccc;
}
.userList text{
    display: block;
    width: 100rpx;
    font-size: 18rpx;
    overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
text-align: center;
}
.chat_container{
    background: #F5F6FB;
    min-height: 600rpx;
}
.chat_input{
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: #fff;
}
.chat_input button{
    margin: 0;
    height: 70rpx;
font-size: 28rpx;
line-height: 70rpx;
color: #fff;
background: #068BDF;
}
.chat_input button::after{
    border: none;
}
